<Window x:Class="WpfClockControlApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfClockControlApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="0" Grid.Column="0">
            <TextBlock Text="Hora"/>
            <TextBox x:Name="tbHora" Width="200" Height="27" HorizontalAlignment="Left"/>
            <Button Content="Set Hora" Width="{Binding ElementName=tbHora, Path=Width}" HorizontalAlignment="Left" Height="27" Click="Button_Click"/>
        </StackPanel>

    </Grid>
</Window>
