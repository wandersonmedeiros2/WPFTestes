<Window x:Class="WpfAlarm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAlarm"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <GroupBox VerticalAlignment="Top" HorizontalAlignment="Left" Height="329" Header="Editar hora da Máquina" Width="297">
            <StackPanel>
                <TextBlock TextWrapping="Wrap" Text="Data e Hora Atuais" Height="20"/>
                <TextBox x:Name="tbNewTime" Height="36" FontSize="36" TextChanged="tbNewTime_TextChanged"/>
                <Button Content="Change time" Height="29" Width="176" Click="Button_Click"/>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
